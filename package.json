{
  "name": "hps-dealengine",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "typecheck": "pnpm -r exec tsc -p . --noEmit",
    "build": "pnpm --filter \"./packages/contracts\" --filter \"./packages/engine\" --filter \"./apps/hps-dealengine\" build",
    "test": "pnpm -r test",
    "dev": "pnpm --filter \"./apps/hps-dealengine\" dev",
    "test:e2e": "playwright test",
    "generate:sandbox-meta": "node scripts/generate-sandbox-meta.cjs",
    "check:glossary": "pnpm dlx tsx scripts/check-glossary-alignment.ts",
    "check:dashboard-coverage": "tsx scripts/dashboard-kpi-coverage-report.ts",
    "check:docs-frontmatter": "tsx scripts/check-doc-frontmatter.ts",
    "generate:doc-registry": "tsx scripts/generate-doc-registry.ts"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.19.0",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "lint-staged": "^16.2.7",
    "typescript": "5.6.3",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.80.0",
    "@vercel/speed-insights": "^1.2.0"
  }
}
