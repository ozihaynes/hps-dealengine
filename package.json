{
  "name": "hps-dealengine",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "typecheck": "pnpm -r exec tsc -p . --noEmit",
    "build": "pnpm --filter \"./packages/contracts\" --filter \"./packages/engine\" --filter \"./apps/hps-dealengine\" build",
    "test": "pnpm -r test",
    "test:agents:analyst": "pnpm --filter \"@hps/agents\" test",
    "dev": "pnpm --filter \"./apps/hps-dealengine\" dev",
    "test:e2e": "playwright test",
    "generate:sandbox-meta": "node scripts/generate-sandbox-meta.cjs",
    "check:glossary": "pnpm dlx tsx scripts/check-glossary-alignment.ts",
    "check:dashboard-coverage": "tsx scripts/dashboard-kpi-coverage-report.ts",
    "check:docs-frontmatter": "tsx scripts/check-doc-frontmatter.ts",
    "generate:doc-registry": "tsx scripts/generate-doc-registry.ts",
    "dev:hps-mcp:http": "set PORT=8787&& set MCP_HTTP_PATH=/mcp&& set HPS_MCP_HTTP_TOKEN=0181fda5-e79b-4086-908e-5e0abeb23a42&& pnpm --filter \"@hps/hps-mcp\" start:http",
    "start": "pnpm --filter \"@hps/agents\" build && pnpm --filter \"@hps/hps-mcp\" build && pnpm --filter \"@hps/hps-mcp\" start:runtime"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@openai/agents": "^0.3.4",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.19.0",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "concurrently": "^9.2.1",
    "lint-staged": "^16.2.7",
    "typescript": "5.6.3",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.80.0",
    "@vercel/speed-insights": "^1.2.0"
  }
}
