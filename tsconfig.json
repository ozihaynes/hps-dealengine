{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "composite": false,
    "skipLibCheck": true
  },
  "include": [
    "apps/hps-dealengine/**/*.ts",
    "apps/hps-dealengine/**/*.tsx",
    "packages/*/src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "packages/engine/tests.skip/**"
  ]
}
