{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@hps/agents": ["../agents/src", "../agents/src/*"],
      "@hps-internal/contracts": ["../contracts/src"],
      "@hps-internal/contracts/*": ["../contracts/src/*"]
    }
  },
  "include": ["src/**/*"]
}
